  <script>
      let currentTheme = localStorage.getItem('theme')
      const themeSelect = document.querySelector('#themeSelector');
      const themeStylesheetLink = document.querySelector("#themeLink");
      console.log(themeStylesheetLink.href)
    function changeTheme(){
        currentTheme = `${themeSelect.value}`
        localStorage.setItem('theme',currentTheme)
    
    }
    function setTheme(){
        let currentTheme = localStorage.getItem('theme')
        themeSelect.value = currentTheme
        themeStylesheetLink.setAttribute('href',`/stylesheets/${currentTheme}.css`);
        if(!currentTheme){
            localStorage.setItem('theme','light')
            themeStylesheetLink.setAttribute('href',`/stylesheets/light.css`);
            themeSelect.value = 'light'
        }
        console.log(themeStylesheetLink.href)
    }

    themeSelect.addEventListener('change',()=>{
        changeTheme()
        setTheme()
    })
    setTheme()
    
  </script>
