<%layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-6 offset-md-3" >
        <p class="h2">Edit personal info</p>
        <form action="/friends/<%= profile._id %>?_method=PUT" method="POST" novalidate class="validated" enctype="multipart/form-data">

            <div class="mb-1 input-group-sm">
                <label class="form-label"><b>Description</b></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Profile[description]"><%= profile.description %></textarea>
                <div class="invalid-feedback">
                    Required
                </div>
            </div>

            <div>
                <label class="form-label"><b>Visibility</b></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Profile[visibilty]" value="private" id="flexRadioDefault1" <%= profile.visibilty == 'private' ? 'checked':'' %> >
                    <label class="form-check-label" for="flexRadioDefault1">
                      Private
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="Profile[visibilty]" value="public" id="flexRadioDefault2" <%= profile.visibilty == 'public' ? 'checked':'' %>>
                    <label class="form-check-label" for="flexRadioDefault2">
                      Public
                    </label>
                  </div>
            </div>

            <div>
                <label class="form-label"><b>Gender :</b></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="male" name="Profile[Gender]" id="flexRadioDefault1" <%= profile.Gender == 'male' ? 'checked':'' %> >
                    <label class="form-check-label" for="flexRadioDefault1">
                      Male
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" value="female" name="Profile[Gender]" id="flexRadioDefault2" <%= profile.Gender == 'female' ? 'checked':'' %>>
                    <label class="form-check-label" for="flexRadioDefault2">
                      Female
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" value="others" name="Profile[Gender]" id="flexRadioDefault3" <%= profile.Gender == 'others' ? 'checked':'' %> >
                    <label class="form-check-label" for="flexRadioDefault3">
                      Others
                    </label>
                  </div>
            </div>

            <div class="mb-3">
                <label for="formFileSm" class="form-label"><b>Change profile image</b> (don't touch if you don't want to change)</label>
                <input class="form-control form-control-sm" id="formFileSm" type="file" name="Profile[image]" single>
            </div>

            <div class="mb-1 input-group-sm">
                <label class="form-label"><b>Date of Birth</b></label>
                <input type="date" class="form-control" name="Profile[dateOfBirth]" value="<%= profile.dateOfBirth %>" required>
                <div class="invalid-feedback">
                    Required
                </div>
            </div>
            <button type="submit" class="btn btn-info mb-2">Update profile</button>

      </form>
</div>
</div>
